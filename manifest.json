{
  "name": "CmdV Ninja",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A chrome extension to interface with the CmdV Ninja website",
  "homepage_url": "https://github.com/kjb085/cmdvninha-chrome-ext",
  "icons": {
    "16": "icons/cmdv_ninja_logo.png",
    "48": "icons/cmdv_ninja_logo.png",
    "128": "icons/cmdv_ninja_logo.png"
  },
  "background": {
    "scripts": 
    [
      "src/bg/background.js",
      "src/bg/current_auth.js",
      "js/jquery/jquery.min.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/jquery/jquery.min.js", "src/bg/current_auth.js", "src/bg/content_script.js"]
    }
  ],
  "options_page": "src/options_custom/settings.html",
  "browser_action": {
    "default_icon": "icons/cmdv_ninja_logo.png",
    "default_title": "CmdV Ninja",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions":
  [
    "tabs",
    "background",
    "storage",
    "contentSettings",
    "http://cmdvninja.herokuapp.com/*",
    "notifications"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Trigger the popup"
    }
  }
}